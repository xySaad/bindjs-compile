import { getCount, double, setCount } from "./states.rbind";

const calculate = (operation) => {
  return operation();
};

export const Counter = () => {
  return (
    <div class={getCount() > 10 ? "counter big" : "count"}>
      <h1>{getCount()}</h1>
      <div class="double" data-double={calculate(double)}></div>
      <button onClick={() => setCount(getCount() + 1)}>+</button>
      <button onClick={() => setCount(getCount() - 1)}>-</button>
    </div>
  );
};
